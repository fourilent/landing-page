---
import type { Column, Link } from "./types";
import { Icon } from "astro-icon/components";
const column: Column = Astro.props.column;
---

<div class="mt-4 flex-1 lg:mt-0">
  <h3 class="text-2xl font-bold italic">{column.title}</h3>
  <ul class="mt-2 flex flex-col gap-2">
    {
      column.links.map((link: Link) => (
        <li>
          <a
            href={link.url}
            class="flex items-center justify-center text-lg no-underline transition hover:text-blue-500"
          >
            {link.name}
            {link.icon && (
              <Icon name={link.icon} class="ml-1 inline-block h-6 w-6" />
            )}
          </a>
        </li>
      ))
    }
  </ul>
</div>
